<%- include('../partials/header') %>

    <div class=" container ">

      <div class="row text-center">
        <div class="col my-auto">
          <h1 id="logo">Plate</h1>
        </div>
      </div>

      <div class="row text-center justify-content-between ">
        <div class="col-2 my-auto">
          <a href="/home/restaurants" class="text-dark"><h3>Go Home</h3></a>
        </div>

        <div class="col-4 my-auto">
          <input class="form-control" type="text" placeholder="Search">
        </div>

        <div class="col-2 my-auto">
          <a href="/logout" class="text-dark"><h3>Log Out</h3></a>
        </div>
      </div>
    </div>

    <div class="container" id="add-review">
      <div class="row">
        <div class="col-7">
          <h1>Add Review</h1>
          <form action="/reviews" method="POST">
          <input type="number" name="restId" id='restaurant-id' value="<%= restaurant.id%>" readonly>
          <br>
          <label class="form-label" ></label>
          <input type="text" name="restaurantName" id='restaurant-name' value="<%= restaurant.name%>" readonly>
          <br>
          <label class="form-label" ></label>
            <select name="foodItem" class='form-select' required>
              <option value=''>Select Menu Item...</option>
              <%restaurant.menu.forEach(function(item){%>
              <option value='<%= item %>'><%= item %></option>
              <% }) %>
            </select>
          <br>
            <select name="rating"  class='form-select' required>
                <option value=''>Select Rating...</option>
                <option value=1>1</option>
                <option value=2>2</option>
                <option value=3>3</option>
                <option value=4>4</option>
                <option value=5>5</option>
            </select>
          <br>
          <label class="form-label"> <h5>Text:</h5>
            <textarea name="content" class="form-control" cols="90"  required></textarea>
          </label>
          <button type="submit" class="btn btn-outline-dark">Add Review</button>
        </form>
        </div>
      </div>
    </div>
  </body>
</html>
 
